<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_color"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="195dip"
        android:background="@drawable/community_person_bg" >

        <ImageView
            android:id="@+id/edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="15dip"
            android:layout_marginTop="25dip"
            android:background="@drawable/selector_community_person_edit" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="80dip"
            android:layout_gravity="bottom"
            android:background="#77000000"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="28dip"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/white_color"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dip"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/white_color"
                android:textSize="14sp" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="55dip" >

            <com.ymdq.thy.ui.community.widget.CircleImgView
                android:id="@+id/head"
                android:layout_width="80dip"
                android:layout_height="80dip"
                android:src="@drawable/default_head_pic" />

            <ImageView
                android:id="@+id/icon_vip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="5dip"
                android:background="@drawable/icon_vip"
                android:visibility="gone" />
        </FrameLayout>
    </FrameLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_color" >

        <LinearLayout
            android:id="@+id/community_tab"
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/my_topic"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="5"
                android:gravity="center"
                android:text="@string/my_topic"
                android:textColor="@color/community_dynamic" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="20dip "
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/line_vertical" />

            <TextView
                android:id="@+id/my_added_group"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="5"
                android:gravity="center"
                android:text="@string/my_added_group"
                android:textColor="@color/black_color" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="20dip "
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/line_vertical" />

            <TextView
                android:id="@+id/my_edit_group"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="6"
                android:gravity="center"
                android:text="@string/my_edit_group"
                android:textColor="@color/black_color" />
        </LinearLayout>

        <ImageView
            android:id="@+id/cursor"
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/community_tab"
            android:layout_marginBottom="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/community_red_line" />
    </RelativeLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/community_red_line_light" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/property_repair_bg"
    android:orientation="vertical" >

    <include
        android:id="@+id/title_bar"
        layout="@layout/app_title" />

    <include
        android:id="@+id/loading_layout"
        layout="@layout/loading_layout"
        android:visibility="gone" />

    <include
        android:id="@+id/click_refresh_layout"
        layout="@layout/loading_failed"
        android:visibility="gone" />

    <com.ymdq.thy.view.MyScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:scrollbars="@null" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_color"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/home_banner" />

            <TextView
                android:id="@+id/ad_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="11dip"
                android:paddingLeft="15dip"
                android:paddingTop="11dip"
                android:text=""
                android:textColor="@color/black_color"
                android:textSize="16sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:background="@drawable/line_grey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="18dip"
                android:paddingTop="10dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dip"
                    android:text="详情"
                    android:textColor="@color/person_register_one_agree"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/ad_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="15dip"
                    android:text=""
                    android:textColor="@color/text_color"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@drawable/line_grey" />

            <com.ymdq.thy.view.MyListView
                android:id="@+id/ad_listview"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:background="@color/property_repair_bg"
                android:divider="@null" />
        </LinearLayout>
    </com.ymdq.thy.view.MyScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@drawable/line_grey" />

    <LinearLayout
        android:id="@+id/praise_blame_layout"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:gravity="bottom"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/praise_layout"
            style="@style/home_advert_detail"
            android:clickable="true" >

            <ImageView
                android:id="@+id/praise_img"
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:scaleType="center"
                android:src="@drawable/home_icon_like" />

            <TextView
                android:id="@+id/praise_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dip"
                android:text="11"
                android:textColor="@color/person_input_hint"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@drawable/line_vertical" />

        <LinearLayout
            android:id="@+id/blame_layout"
            style="@style/home_advert_detail"
            android:clickable="true" >

            <ImageView
                android:id="@+id/blame_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_caired" />

            <TextView
                android:id="@+id/blame_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dip"
                android:text="11"
                android:textColor="@color/person_input_hint"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@drawable/line_vertical" />

        <LinearLayout
            android:id="@+id/comment_layout"
            style="@style/home_advert_detail"
            android:clickable="true" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/home_icon_comment" />

            <TextView
                android:id="@+id/comment_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dip"
                android:text="11"
                android:textColor="@color/person_input_hint"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@drawable/line_vertical" />

        <LinearLayout
            android:id="@+id/share_layout"
            style="@style/home_advert_detail"
            android:clickable="true" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/community_share" />

            <TextView
                android:id="@+id/share_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dip"
                android:text="11"
                android:textColor="@color/person_input_hint"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/go_to_evaluate_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="7dip"
        android:paddingLeft="9dip"
        android:paddingRight="9dip"
        android:paddingTop="7dip"
        android:background="@color/white_color"
        android:orientation="horizontal"
        android:visibility="gone" >

        <EditText
            android:id="@+id/input_content"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/community_inputbox_comment"
            android:maxLength="200"
            android:maxLines="3"
            android:padding="5dip"
            android:textColor="@color/community_comment_input"
            android:textSize="15sp" />

        <Button
            android:id="@+id/send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dip"
            android:background="@drawable/selector_community_comment_send_btn"
            android:padding="5dip"
            android:text="发送"
            android:textColor="@color/black_color"
            android:textSize="15sp" >
        </Button>
    </LinearLayout>

</LinearLayout>
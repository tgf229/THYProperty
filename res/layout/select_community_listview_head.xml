<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_color"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/current_layout_title"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="36dip"
        android:gravity="center_vertical"
        android:paddingLeft="15dip"
        android:background="@color/f8f8f8">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_location_1" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/bb474d"
            android:textSize="15sp"
            android:layout_marginLeft="10dip"
            android:text="当前选择的小区" />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/current_layout"
        android:layout_width="match_parent"
        android:layout_height="44dip"
        android:visibility="gone"
        android:paddingLeft="20dip">
        <TextView
            android:id="@+id/current_c_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/home_title"
            android:layout_marginLeft="22dip"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/current_comm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/home_title"
            android:layout_marginLeft="12dip"
            android:layout_toRightOf="@id/current_c_city"
            android:layout_centerVertical="true" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="42dip"
            android:src="@drawable/tips_select_1" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dip"
        android:gravity="center_vertical"
        android:paddingLeft="15dip"
        android:background="@color/f8f8f8">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_xiaoqu" />
        <TextView
            android:id="@+id/other_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/home_title"
            android:textSize="15sp"
            android:layout_marginLeft="9dip"
            android:text="选择小区" />
    </LinearLayout>
</LinearLayout>
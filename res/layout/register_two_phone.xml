<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/person_register_bg"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="9dp"
        android:layout_marginTop="16dp"
        android:paddingLeft="15dp"
        android:text="填写验证码"
        android:textColor="@color/person_register_choise_title"
        android:textSize="15sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@drawable/person_center_lists_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_color"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="15dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="业主手机号"
                android:textColor="@color/home_title"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/register_two_phone_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="1352*****21"
                android:textColor="@color/black_color"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/register_two_code_left_et"
                android:layout_width="0dp"
                android:layout_height="37dp"
                android:layout_weight="1.0"
                android:background="@drawable/register_two_code_left_bg"
                android:hint=""
                android:imeOptions="actionNext"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:maxLength="20"
                android:inputType="number"
                android:singleLine="true"
                android:textColor="@color/person_input_text"
                android:textColorHint="@color/person_input_hint"
                android:textSize="14sp" />
            
            <Button
                android:id="@+id/register_two_code_right_bt"
                android:layout_width="114dp"
                android:layout_height="37dp"
                android:background="@drawable/register_two_code_sumbit_bg_selector"
                android:text="获取验证码"
                android:layout_marginLeft="9dp"
                android:textColor="@color/text_color"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="10dp"
            android:text="如已更换手机,需业主前往服务中心更新"
            android:textColor="@color/person_register_choise_title"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@drawable/person_center_lists_line" />

</LinearLayout>
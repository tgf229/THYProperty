<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="#f8f8f8"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dip"
            android:layout_marginLeft="16dip"
            android:layout_marginTop="16dip"
            android:text="分享到"
            android:textColor="@color/black_color"
            android:textSize="15sp" />

        <HorizontalScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dip"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/winxin_friend"
                    style="@style/community_pop_text"
                    android:layout_marginLeft="16dip"
                    android:drawablePadding="8dip"
                    android:drawableTop="@drawable/pop_icon_weixin"
                    android:gravity="center_horizontal"
                    android:text="微信好友" />

                <TextView
                    android:id="@+id/winxin_circle"
                    style="@style/community_pop_text"
                    android:layout_marginLeft="21dip"
                    android:drawablePadding="8dip"
                    android:drawableTop="@drawable/pop_icon_friend"
                    android:gravity="center_horizontal"
                    android:text="朋友圈" />

                <TextView
                    android:id="@+id/xinlang"
                    style="@style/community_pop_text"
                    android:layout_marginLeft="21dip"
                    android:drawablePadding="8dip"
                    android:drawableTop="@drawable/pop_icon_xinlang"
                    android:gravity="center_horizontal"
                    android:text="新浪微博" />

                <TextView
                    android:id="@+id/qq_friend"
                    style="@style/community_pop_text"
                    android:layout_marginLeft="21dip"
                    android:drawablePadding="8dip"
                    android:drawableTop="@drawable/pop_icon_qq"
                    android:gravity="center_horizontal"
                    android:text="QQ好友" />

                <TextView
                    android:id="@+id/qq_circle"
                    style="@style/community_pop_text"
                    android:layout_marginLeft="21dip"
                    android:layout_marginRight="16dip"
                    android:drawablePadding="8dip"
                    android:drawableTop="@drawable/pop_icon_kongjian"
                    android:gravity="center_horizontal"
                    android:text="QQ空间" />
            </LinearLayout>
        </HorizontalScrollView>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#d5d5d5" />
    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dip"
            android:layout_marginTop="15dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/move"
                style="@style/community_pop_text"
                android:layout_marginLeft="16dip"
                android:drawablePadding="8dip"
                android:drawableTop="@drawable/pop_icon_yidong"
                android:gravity="center_horizontal"
                android:text="移动" />

            <TextView
                android:id="@+id/top_or_cancel"
                style="@style/community_pop_text"
                android:layout_marginLeft="21dip"
                android:drawablePadding="8dip"
                android:drawableTop="@drawable/pop_icon_zhiding"
                android:gravity="center_horizontal"
                android:text="置顶" />

            <TextView
                android:id="@+id/report"
                style="@style/community_pop_text"
                android:layout_marginLeft="21dip"
                android:drawablePadding="8dip"
                android:drawableTop="@drawable/pop_icon_jubao"
                android:gravity="center_horizontal"
                android:text="举报" />

            <TextView
                android:id="@+id/delete"
                style="@style/community_pop_text"
                android:layout_marginLeft="21dip"
                android:layout_marginRight="16dip"
                android:drawablePadding="8dip"
                android:drawableTop="@drawable/pop_icon_shanchu"
                android:gravity="center_horizontal"
                android:text="删除" />
        </LinearLayout>
    </HorizontalScrollView>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#d5d5d5" />

    <TextView
        android:id="@+id/cancel"
        android:layout_width="fill_parent"
        android:layout_height="49dip"
        android:background="@color/white_color"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/black_color"
        android:textSize="16sp" />

</LinearLayout>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <style name="toast_text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white_color</item>
    </style>

    <!-- 对话框 -->
    <style name="loading_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="home_icon_style">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black_color</item>
        <item name="android:drawablePadding">9dip</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@null</item>
    </style>

    <style name="title_relativelayout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">44dip</item>
        <item name="android:background">@drawable/home_titibg</item>
    </style>

    <style name="title_back_layout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:paddingRight">25dip</item>
        <item name="android:paddingLeft">15dip</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="title_btn_back">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@drawable/left_arrow</item>
    </style>

    <style name="title_name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/home_title</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="title_call_layout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:paddingRight">15dip</item>
        <item name="android:paddingLeft">15dip</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="title_btn_call">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">#ffffffff</item>
    </style>

    <style name="register_title_text">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="community_dynamic_text">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/home_title</item>
    </style>

    <style name="community_dynamic_more_text">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/community_come_from</item>
    </style>

    <style name="community_circle_list_text">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/community_come_from</item>
    </style>

    <style name="community_square_time_text">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/community_come_from</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="community_dynamic_agree_text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black_color</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="community_like_text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/community_come_from</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="community_create_or_edit">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black_color</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">15dip</item>
    </style>

    <style name="main_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="image_select_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="dialog_style" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="@android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <style name="property_top_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="property_bottom_text" parent="property_top_text">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">15dip</item>
    </style>

    <style name="property_middle_red">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white_color</item>
        <item name="android:drawablePadding">14dip</item>
    </style>


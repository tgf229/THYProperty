    <style name="property_evaluate_radio">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/home_title</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawableLeft">@drawable/property_evaluate_radio_selector</item>
        <item name="android:drawablePadding">10dip</item>
    </style>

    <style name="home_central_list">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:layout_marginTop">10dip</item>
    </style>

    <style name="home_advert_detail">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/property_bottom_bg_selector</item>
    </style>

    <style name="community_post_topic">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black_color</item>
    </style>

    <style name="ContentOverlay" parent="@android:style/Theme.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="report_reason">
        <item name="android:button">@null</item>
        <item name="android:drawableLeft">@drawable/report_selector</item>
        <item name="android:drawablePadding">11dip</item>
        <item name="android:paddingTop">15dip</item>
        <item name="android:paddingLeft">11dip</item>
        <item name="android:paddingBottom">15dip</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/black_color</item>
    </style>

    <style name="community_bottom_text">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/community_bottom_color</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="community_pop_text">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/community_pop_color</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>